<h1>Post your AD</h1>
<h3> You are in RENT section </h3>

<%= form_for @rental do |f| %>
  
  <% if flash[:errors] %>
  <%   flash[:errors].each do |message| %>
  <%= message %>
  <% end %>
  <% end %>

  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :photo_url %> <br/>
    <%= f.text_field :photo_url %>
  </p>
  <p>
    <%= f.label :rental_availability %> <br/>
    <%= f.date_field :rental_availability %>
  </p>
  <p>
    <%= f.label :price %> <br/>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.collection_select :user_ids, User.all, :id, :username %>
  </p>

  <div class="btn btn-primary btn-sm">
    <%= f.submit "Create AD", :class => "btn" %>
  </div>

<% end %>