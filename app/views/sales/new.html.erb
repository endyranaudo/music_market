<h1>Post your AD</h1>
<h3> sales section </h3>

<%= form_for @sale do |f| %>
  
  <% if flash[:errors] %>
  <%   flash[:errors].each do |message| %>
  <%= message %>
  <% end %>
  <% end %>

  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :photo_url %> <br/>
    <%= f.text_field :photo_url %>
  </p>
  <p>
    <%= f.label :price %> <br/>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :user_id %> <br/>
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.submit "Create AD" %>
  </p>

<% end %>


