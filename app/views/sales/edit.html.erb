<h1>Edit AD</h1>

<%= form_for @sale do |f| %>

  <% if flash[:errors] %>
  <%   flash[:errors].each do |message| %>
  <%= message %>
  <% end %>
  <% end %>

  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :photo_url %> <br/>
    <%= f.text_field :photo_url %>
  </p>
  <p>
    <%= f.label :price %> <br/>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :user_id %> <br/>
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.submit "SAVE EDIT" %>
  </p>
  
  <div class="btn btn-primary">
    <%= link_to "BACK", sale_path(@sale), :class => "btn" %>
  </div>

<% end %>